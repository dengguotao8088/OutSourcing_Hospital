<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <ImageView
            android:id="@+id/home_page_show_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/new1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:text="lklkjkljlkjlkjlkjlkjlkjlkjlkjlkjlkjlkj"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/zhongyiyangsheng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/lm1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="中医养生"
                android:textColor="#0FA6B9"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chanhoukangfu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/lm2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="产后康复"
                android:textColor="#0FA6B9"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pifumeirong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/lm3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="皮肤美容"
                android:textColor="#0FA6B9"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/yujiaxiuyang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/lm4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="瑜伽修养"
                android:textColor="#0FA6B9"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/xiaoertuina"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/lm5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="小儿推拿"
                android:textColor="#0FA6B9"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#85D7D3"
        android:gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="1dp">

            <Button
                android:id="@+id/home_page_yihurenyuan_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#85D7D3"
                android:text="医护人员"
                android:textSize="16dp" />

            <Button
                android:id="@+id/home_page_news_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#85D7D3"
                android:text="新闻中心"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/home_page_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DEDEDE">

    </ListView>
</LinearLayout>